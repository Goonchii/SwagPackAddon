{
  "format_version": "1.19.0",
  "minecraft:entity": {
    "description": {
      "identifier": "mango:mango_merchant",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    "components": {
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": true
        }
      },
      "minecraft:type_family": {
        "family": [ "npc", "mob" ]
      },
      "minecraft:health": {
        "max": 20,
        "value": 20
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 2.0
      },
      "minecraft:behavior.look_at_player": {
        "priority": 1,
        "look_distance": 6.0,
        "look_time": [1,4],
        "probability": 0.03
      },
      "minecraft:behavior.look_at_entity": {
        "priority": 0,
        "look_distance":6.0,
        "look_time": [1,4],
        "probability":0.03
      },
      "minecraft:behavior.random_look_around": {
        "priority":0,
        "look_distance":6.0,
        "probability":0.03
      },

      "minecraft:persistent": {
      
      },
      "minecraft:physics": {
      }
    }
  }
}
