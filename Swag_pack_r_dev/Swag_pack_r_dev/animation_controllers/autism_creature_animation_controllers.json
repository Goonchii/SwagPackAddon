{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.autism_creature.sleep": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"transitions": [
						{
							"sleep": "query.is_sleeping"
						}
					],
					"blend_transition": 0.2
				},
				"sleep": {
					"animations": ["sleeping"],
					"transitions": [
						{
							"idle": "!query.is_sleeping"
						}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.autism_creature.sitting" : {
			"initial_state" : "idle",
			"states" : {
				"idle" : {
					"transitions" : [
						{
							"sitting" : "query.is_sitting"
						}
					]
				},
				"sitting" : {
					"animations" : [ "sitting" ],
					"transitions" : [
						{
							"idle" : "!query.is_sitting"
						}
					]
				}
			}
		},
		"controller.animation.autism_creature.walk": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"walking": "q.ground_speed > 1.0"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": ["walk"],
					"transitions": [
						{"idle": "q.ground_speed < 0.5"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}

